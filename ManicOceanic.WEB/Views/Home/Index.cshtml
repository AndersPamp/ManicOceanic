@model ManicOceanic.WEB.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}


<style>
  /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }
</style>


    <div id="carouselExampleIndicators" class="carousel" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/david-clode-594545-unsplash-kopia.jpg" alt="First slide">
                <div class="carousel-caption">
                    <h3>Manic Oceanic</h3>
                    <p>We love fish</p>
                    <p><small>Photo by Delbert Pagayona</small></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/david-clode-643808-unsplash-kopia.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h3>Manic Oceanic</h3>
                    <p><small>Photo by Delbert Pagayona</small></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/Images/david-clode-1364919-unsplash- kopia.jpg" alt="Third slide">
                <div class="carousel-caption">
                    <h3>Manic Oceanic</h3>
                    <p><small>Photo by Delbert Pagayona</small></p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



    <div class="card-deck" style="padding-top: 5%">
        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Fish</h5>
                <p class="card-text">Manic Oceanic can offer both saltwater fish and freshwater fish</p>

            </div>
            <a asp-area="" asp-controller="Category" asp-action="Index">
                <img class="card-img-bottom"
                     src="@Model.Fish.ImageUrl" alt="@Model.Fish.Name">
            </a>
        </div>



        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Fish food</h5>
                <p class="card-text">We have food for all types of fish</p>

            </div>
            <a asp-area="" asp-controller="Product" asp-action="FishFood">
                <img class="card-img-bottom" src="@Model.FishFood.ImageUrl"
                     alt="@Model.FishFood.Name" />
            </a>
        </div>


        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Aquarium</h5>
                <p class="card-text">A small bowl or a bigger one? Manic Oceanic can offer whatever you want</p>

            </div>
            <a asp-area="" asp-controller="Product" asp-action="Aquarium">
                <img class="card-img-bottom"
                     src="@Model.Aquarium.ImageUrl" alt="@Model.Aquarium.Name" />
            </a>
        </div>

    </div>





