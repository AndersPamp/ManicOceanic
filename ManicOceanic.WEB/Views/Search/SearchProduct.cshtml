
@model ManicOceanic.WEB.Models.SearchViewModel
@{
    ViewData["Title"] = "SearchProduct";
}

<h>Search result</h>



<div class="container">
   
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Product</th>
                <th>Product Name</th>
 
            </tr>
            </thead>
            <tbody>
            @foreach (var product in @Model.SearchResult)
            {
                <tr>
                    <td><img src="@product.ImageUrl" class="img-thumbnail" width="150" /><td>

                        <td><a asp-controller="Product" asp-action="ShowDetail" asp-route-productNumber="@product.ProductNumber">@product.Name</a>
                        </td>
                    

                </tr>
            }
            </tbody>
        </table>
        
</div>


