@model IEnumerable<ManicOceanic.DOMAIN.Entities.Sales.Order>
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            Order number
        </th>
        <th>
            Customer name
        </th>
        <th>
            Date
        </th>
        <th>
            Payment type
        </th>
        <th>
            Total cost
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modeItem=>item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>@Html.ActionLink("Details","ListOrderLines","Order",new { id = item.Id })</td>
        </tr>
    }
    </tbody>
</table>